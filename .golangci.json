{
  "version": "2",
  "linters": {
    "default" : "fast",
    "disable" : [
      "unused",
      "lll",
      "wsl",
      "cyclop",
      "gocognit",
      "funlen",
      "nakedret"
    ],
    "enable"  : [
      "tagalign",
      "wsl_v5"
    ],
    "settings": {
      "depguard": {
        "rules": {
          "main": {
            "list-mode": "lax",
            "allow"    : [
              "**"
            ]
          }
        }
      },
      "tagalign": {
        "align" : true,
        "sort"  : true,
        "strict": true
      },
      "wsl_v5"  : {
        "allow-first-in-block": true,
        "allow-whole-block"   : false,
        "branch-max-lines"    : 2
      }
    }
  }
}
